@{
    ViewData["Title"] = "Trang Chủ";
}
<style>
    /* Thanh điều hướng */
    nav ul {
        list-style: none;
        padding: 0;
        text-align: center;
        background-color: #333;
    }

        nav ul li {
            display: inline;
            margin: 0 15px;
        }

            nav ul li a {
                color: white;
                text-decoration: none;
                font-size: 16px;
            }

    /* Banner chính */
    .hero {
        text-align: center;
        margin: 30px 0;
    }

        .hero img {
            width: 100%;
            height: auto;
        }

        .hero h1 {
            font-size: 2.5em;
            color: #fff;
            margin-top: -50px;
        }

        .hero .cta-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #0094ff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

    /* Sản phẩm nổi bật */
    .featured-products {
        text-align: center;
        margin: 30px 0;
    }

        .featured-products h2 {
            font-size: 2em;
        }

    .products {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .product {
        width: 200px;
        text-align: center;
    }

        .product img {
            width: 100%;
            height: auto;
        }

        .product .btn {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 10px;
        }

    /* Danh mục sản phẩm */
    .product-categories {
        text-align: center;
        margin: 30px 0;
    }

        .product-categories ul {
            list-style: none;
            padding: 0;
        }

            .product-categories ul li {
                display: inline-block;
                margin: 0 20px;
            }

                .product-categories ul li a {
                    text-decoration: none;
                    color: #007bff;
                    font-size: 1.2em;
                }

    /* Chân trang */
    footer {
        text-align: center;
        padding: 20px;
        background-color: #333;
        color: white;
    }

</style>

